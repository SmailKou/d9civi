<div class="designer-maker-profile">
  <div class="profile-header">
    <div class="profile-cover-photo">
    </div>
    <div class="profile-info">
      <div class="profile-photo">
      </div>
      <div class="profile-details">
        <h1>{{ designer_maker.display_name }}</h1>
        <p class="profile-email"><strong>Email:</strong> {{ designer_maker.email }}</p>
        <p class="profile-phone"><strong>Phone:</strong> {{ designer_maker.phone }}</p>
      </div>
    </div>
  </div>
  <div class="profile-body">
    <div class="profile-address">
      <h2>Contact Information</h2>
      <p><strong>Street Address:</strong> {{ designer_maker.street_address }}</p>
      <p><strong>City:</strong> {{ designer_maker.city }}</p>
      <p><strong>State/Province:</strong> {{ designer_maker.state_province }}</p>
      <p><strong>Postal Code:</strong> {{ designer_maker.postal_code }}</p>
      <p><strong>Country:</strong> {{ designer_maker.country }}</p>
    </div>
  </div>
</div>
